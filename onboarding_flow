    <script>
        // Supabase Configuration
        const SUPABASE_URL = 'https://your-project-id.supabase.co';
        const SUPABASE_ANON_KEY = 'your-anon-key-here';
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

        // State management
        let currentStep = 1;
        const totalSteps = 5;
        let formData = {
            firstName: '',
            email: '',
            zipCode: '',
            numberOfChildren: 0,
            monthlyBudget: 200,
            children: [],
            maxTravelDistance: '',
            preferredTimes: []
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeEventListeners();
            updateProgressBar();
        });

        function initializeEventListeners() {
            // Step 1 form
            document.getElementById('signupForm').addEventListener('submit', handleSignup);

            // Step 2 number selection
            document.querySelectorAll('.number-option').forEach(option => {
                option.addEventListener('click', handleNumberSelection);
            });

            // Step 3 budget slider
            const budgetSlider = document.getElementById('budgetSlider');
            budgetSlider.addEventListener('input', handleBudgetChange);

            // Step 5 preferences form
            document.getElementById('preferencesForm').addEventListener('submit', handleComplete);

            // Time preference selection
            document.querySelectorAll('[data-time]').forEach(option => {
                option.addEventListener('click', handleTimeSelection);
            });
        }

        // Navigation functions
        function showStep(stepNumber) {
            // Hide all steps
            document.querySelectorAll('[id^="step"], #successState').forEach(el => {
                el.classList.add('hidden');
            });

            // Show current step
            const currentStepEl = document.getElementById(`step${stepNumber}`);
            if (currentStepEl) {
                currentStepEl.classList.remove('hidden');
                currentStepEl.classList.add('fade-in');
            }

            currentStep = stepNumber;
            updateProgressBar();
        }

        function nextStep() {
            if (currentStep < totalSteps) {
                // Special handling for step 4 - generate child forms
                if (currentStep === 3) {
                    generateChildForms();
                }
                showStep(currentStep + 1);
            }
        }

        function previousStep() {
            if (currentStep > 1) {
                showStep(currentStep - 1);
            }
        }

        function updateProgressBar() {
            const progress = (currentStep / totalSteps) * 100;
            document.getElementById('progressBar').style.width = `${progress}%`;
        }

        // Step 1: Signup
        async function handleSignup(e) {
            e.preventDefault();
            
            formData.firstName = document.getElementById('firstName').value;
            formData.email = document.getElementById('email').value;
            formData.zipCode = document.getElementById('zipCode').value;

            // Here you would normally create the user in Supabase
            // For now, just move to next step
            nextStep();
        }

        // Step 2: Number selection
        function handleNumberSelection(e) {
            // Remove previous selection
            document.querySelectorAll('.number-option').forEach(opt => {
                opt.classList.remove('selected');
            });

            // Add selection
            e.currentTarget.classList.add('selected');
            formData.numberOfChildren = parseInt(e.currentTarget.dataset.value);

            // Enable continue button
            document.getElementById('step2Continue').disabled = false;
        }

        // Step 3: Budget
        function handleBudgetChange(e) {
            const value = e.target.value;
            formData.monthlyBudget = parseInt(value);
            document.getElementById('budgetDisplay').textContent = value === '1000' ? '$1000+' : `${value}`;
        }

        // Step 4: Generate child forms
        function generateChildForms() {
            const container = document.getElementById('childrenForms');
            container.innerHTML = '';

            for (let i = 0; i < formData.numberOfChildren; i++) {
                const childNumber = i + 1;
                const childForm = document.createElement('div');
                childForm.className = 'child-card';
                childForm.innerHTML = `
                    <div class="child-header">
                        <div class="child-avatar">${getChildEmoji(childNumber)}</div>
                        <div class="child-info">
                            <h3>Child ${childNumber}</h3>
                            <p>Tell us a bit about them</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="childName${childNumber}">Name (optional)</label>
                        <input type="text" id="childName${childNumber}" placeholder="Emma">
                    </div>

                    <div class="form-group">
                        <label for="childAge${childNumber}">Age</label>
                        <select id="childAge${childNumber}" required>
                            <option value="">Select age...</option>
                            ${generateAgeOptions()}
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Interests (select all that apply)</label>
                        <div class="interest-grid" id="interests${childNumber}">
                            <div class="interest-option" data-interest="sports">
                                <div class="interest-icon">⚽</div>
                                <div>Sports</div>
                            </div>
                            <div class="interest-option" data-interest="arts">
                                <div class="interest-icon">🎨</div>
                                <div>Arts</div>
                            </div>
                            <div class="interest-option" data-interest="music">
                                <div class="interest-icon">🎵</div>
                                <div>Music</div>
                            </div>
                            <div class="interest-option" data-interest="stem">
                                <div class="interest-icon">🔬</div>
                                <div>STEM</div>
                            </div>
                            <div class="interest-option" data-interest="dance">
                                <div class="interest-icon">💃</div>
                                <div>Dance</div>
                            </div>
                            <div class="interest-option" data-interest="outdoor">
                                <div class="interest-icon">🌲</div>
                                <div>Outdoor</div>
                            </div>
                        </div>
                    </div>
                `;
                container.appendChild(childForm);

                // Add event listeners for interest selection
                childForm.querySelectorAll('[data-interest]').forEach(option => {
                    option.addEventListener('click', function() {
                        this.classList.toggle('selected');
                    });
                });
            }

            // Initialize children array
            formData.children = Array(formData.numberOfChildren).fill(null).map(() => ({
                name: '',
                age: null,
                interests: []
            }));
        }

        // Step 5: Time selection
        function handleTimeSelection(e) {
            e.currentTarget.classList.toggle('selected');
            const time = e.currentTarget.dataset.time;
            
            if (e.currentTarget.classList.contains('selected')) {
                formData.preferredTimes.push(time);
            } else {
                formData.preferredTimes = formData.preferredTimes.filter(t => t !== time);
            }
        }

        // Complete setup
        async function handleComplete(e) {
            e.preventDefault();

            // Collect final data
            formData.maxTravelDistance = document.getElementById('maxTravel').value;

            // Collect children data
            for (let i = 0; i < formData.numberOfChildren; i++) {
                const childNumber = i + 1;
                formData.children[i] = {
                    name: document.getElementById(`childName${childNumber}`)?.value || '',
                    age: parseInt(document.getElementById(`childAge${childNumber}`)?.value) || null,
                    interests: Array.from(document.querySelectorAll(`#interests${childNumber} .selected`))
                        .map(el => el.dataset.interest)
                };
            }

            // Show loading
            const btn = document.getElementById('completeBtn');
            btn.querySelector('.loading-spinner').classList.remove('hidden');
            btn.disabled = true;

            try {
                // Save to Supabase
                await saveToSupabase(formData);

                // Show success
                document.getElementById('step5').classList.add('hidden');
                document.getElementById('successState').classList.remove('hidden');
                document.getElementById('progressBar').style.width = '100%';
            } catch (error) {
                console.error('Error saving data:', error);
                alert('Something went wrong. Please try again.');
            } finally {
                btn.querySelector('.loading-spinner').classList.add('hidden');
                btn.disabled = false;
            }
        }

        // Helper functions
        function getChildEmoji(number) {
            const emojis = ['👶', '👧', '👦', '🧒', '👶'];
            return emojis[(number - 1) % emojis.length];
        }

        function generateAgeOptions() {
            let options = '';
            for (let age = 3; age <= 17; age++) {
                options += `<option value="${age}">${age} years old</option>`;
            }
            return options;
        }

        async function saveToSupabase(data) {
            // First, create the waitlist entry
            const { data: waitlistEntry, error: waitlistError } = await supabase
                .from('waitlist')
                .insert([{
                    email: data.email,
                    first_name: data.firstName,
                    zip_code: data.zipCode,
                    family_size: data.numberOfChildren,
                    source: 'website',
                    user_role: 'family',
                    completed_onboarding: true
                }])
                .select()
                .single();

            if (waitlistError) throw waitlistError;

            // Create family profile
            const { data: familyProfile, error: familyError } = await supabase
                .from('family_profiles')
                .insert([{
                    waitlist_id: waitlistEntry.id,
                    monthly_budget: data.monthlyBudget,
                    max_travel_distance: parseInt(data.maxTravelDistance),
                    preferred_times: data.preferredTimes
                }])
                .select()
                .single();

            if (familyError) throw familyError;

            // Create children profiles
            const childrenData = data.children.map(child => ({
                family_id: familyProfile.id,
                name: child.name || null,
                age: child.age,
                interests: child.interests
            }));

            const { error: childrenError } = await supabase
                .from('children')
                .insert(childrenData);

            if (childrenError) throw childrenError;

            return { waitlistEntry, familyProfile };
        }

        // Social login functions
        function signInWithGoogle() {
            // Implement Google Sign-In
            console.log('Google sign-in clicked');
            alert('Google sign-in integration coming soon!');
        }

        function signInWithFacebook() {
            // Implement Facebook Sign-In
            console.log('Facebook sign-in clicked');
            alert('Facebook sign-in integration coming soon!');
        }
    </script>
</body>
</html>
